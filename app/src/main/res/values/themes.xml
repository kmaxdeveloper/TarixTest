<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TarixTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.TarixTest" parent="Base.Theme.TarixTest" />


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="VariantStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/style_test_default_answer</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">click</item>
    </style>
    <style name="TestCountStyle">
        <item name="android:layout_width">11.5dp</item>
        <item name="android:layout_height">11.5dp</item>
        <item name="android:background">@drawable/style_test_count</item>
        <item name="android:layout_marginEnd">0.5dp</item>
        <item name="android:layout_marginStart">0.5dp</item>
    </style>
    <style name="PrivacyPolicyTextBlockStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PrivacyPolicyTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleTestCorrectAnswer">
        <item name="android:background">@drawable/style_test_correct_answer</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="StyleTestWrongAnswer">
        <item name="android:background">@drawable/style_test_correct_answer</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="StyleTestDefaultAnswer">
        <item name="android:background">@drawable/style_test_correct_answer</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>