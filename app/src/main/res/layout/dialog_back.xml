<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="450dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/style_btn"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dialogWarning"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/image_warning_512px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dialogWarning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/warning"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:fontFamily="@font/pre_hear_regular"
            android:textSize="28sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textDialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/dialog_back_text"
            android:maxWidth="320dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/dialog_back_text2"
            android:maxWidth="320dp"
            android:gravity="center"
            android:textColor="@color/black"
            app:fontFamily="@font/pre_hear_regular"
            android:layout_marginTop="7dp"
            android:textSize="20sp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/info2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialogBackYes"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:background="@drawable/style_btn"
                android:drawableStart="@drawable/image_back_32px"
                android:text="@string/yes"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:padding="18dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialogBackNo"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:background="@drawable/style_btn"
                android:drawableEnd="@drawable/image_no_32px"
                android:text="@string/no"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:padding="18dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>